<?xml version="1.0"?>

<project name="sqlep" default="change-version" basedir=".">
	
	<property name="version.from" value="2.7.0-SNAPSHOT"/>
	<property name="version.to" value="2.7.0"/>
	<property name="version.from2" value="2.7.0.qualifier"/>
	<property name="version.to2" value="2.7.0"/>
	
	<target name="change-version">
		<replace dir=".." token="${version.from}" value="${version.to}">
			<include name="**/pom.xml"/>
		</replace>

		<replace dir=".." token="${version.from}" value="${version.to}">
			<include name="**/build.gradle"/>
		</replace>
		
		<replace dir=".." token="${version.from}" value="${version.to}">
			<include name="*/.classpath"/>
		</replace>
		
		<replace dir=".." token="${version.from}" value="${version.to}">
			<include name="*/.settings/org.eclipse.wst.common.component"/>
		</replace>

		<replace dir=".." token="${version.from2}" value="${version.to2}">
			<include name="**/MANIFEST.MF"/>
		</replace>

		<replace dir=".." token="${version.from2}" value="${version.to2}">
			<include name="**/feature.xml"/>
		</replace>
	</target>
</project>
